<div class="table-responsive">
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Game</th>
        <th scope="col">Summary</th>
        <th scope="col">Total Rating Count</th>
        <th scope="col">Link</th>
    </tr>
    </thead>

    <tbody>
        <% @games.each do |game| %>
            <tr>
                <td><%= game['name'] %></td>
                <td><%= game['summary'] %></td>
                <td><%= game['total_rating_count']%></td>
                <td><%= game['url']%></td>
            <%end%>
        </tbody>
    </table>

    <br> 
     
</div>