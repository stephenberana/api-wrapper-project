    <tr>
        <th scope="col">Company</th>
        <th scope="col">Description</th>
        <th scope="col">Link</th>
    </tr>
    </thead>

    <tbody>
        <% @companies.each do |company| %>
            <tr>
                <td><%= company['name'] %></td>
